section.b-realization
    .container
        .row
            .b-service.b-service_position
                mixin b-service__unit(src, alt, header, description)
                    figure.b-service__unit
                        img(src=src, alt=alt).b-service__img
                        figcaption.b-service__description.b-service__description_position
                            span.b-service__descriptionHead= header
                            p.b-service__descriptionText.b-service__descriptionText_position= description

                - var descriptionVisible= "Nam liber tempor cum soluta nobis eleifend option congue nihil imperdiet doming id quod mazim."
                - var descriptionHidden= "Lorem ipsum dolor sit amet, adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet."

                +b-service__unit("images/realization/ourService/design.png", "Web & App Design", "Web & App Design", descriptionVisible)
                +b-service__unit("images/realization/ourService/development.png", "Development", "Development", descriptionVisible)
                +b-service__unit("images/realization/ourService/customization.png", "Customization", "Customization", descriptionVisible)
                +b-service__unit("images/realization/ourService/marketing.png", "Marketing", "Marketing", descriptionVisible)

            .b-realizationHead.b-realizationHead_position
